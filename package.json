{
  "name": "nexus-archive-downloader",
  "displayName": "Nexus archive downloader",
  "version": "0.0.1",
  "description": "Download archived Nexus Mods directly from the file archive pages.",
  "author": "Jumble",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "package": "plasmo package"
  },
  "dependencies": {
    "plasmo": "0.90.5",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "4.1.1",
    "@types/chrome": "0.0.258",
    "@types/node": "20.11.5",
    "@types/react": "18.2.48",
    "@types/react-dom": "18.2.18",
    "prettier": "3.2.4",
    "typescript": "5.3.3"
  },
  "manifest": {
    "manifest_version": 3,
    "permissions": [
      "tabs",
      "storage"
    ],
    "host_permissions": [
      "https://www.nexusmods.com/*"
    ]
  }
}